<div class="data-form">     
    <h1 class="heading">SIGN UP</h1>
    <form action="/register" method="post">
        <label>
            <p class="label-txt">ENTER YOUR EMAIL</p>
            <% if(typeof(errors) !== 'undefined' && errors['email']) { %>
                <p class="error"><%- errors['email'].msg %></p>
            <% } %>
            <input type="text" class="input" name="email">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">ENTER YOUR PASSWORD</p>
            <% if(typeof(errors) !== 'undefined' && errors['password']) { %>
                <p class="error"><%- errors['password'].msg %></p>
            <% } %>
            <input type="password" placeholder="Minimum 6 characters..." class="input" name="password">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">CONFIRM YOUR PASSWORD</p>
            <% if(typeof(errors) !== 'undefined' && errors['password-confirm']) { %>
                <p class="error"><%- errors['password-confirm'].msg %></p>
            <% } %>
            <input type="password" class="input" name="password-confirm">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <button type="submit">Sign up</button>
    </form>
</div>